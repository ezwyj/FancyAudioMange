@model AudioCore.Entity.AudioEntity
@{
    ViewBag.Title = "手机播放";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
    
}

@section styles {
    <link href="@Url.Content("~/assets/css/weui/weui.min.css")" rel="stylesheet" />
<style>
    html,body { height:100%;}

    .container {
        width: 100%;
        height: 660px;
        margin: 0 auto;
        background: url(@Url.Content("~/assets/img/mobileImage/bg.png")) no-repeat;
        position: relative;
    }

    .container .whiteBg {
        width: 100%;

        height: 93px;
        background: url(@Url.Content("~/assets/img/mobileImage/1.jpg")) no-repeat;
        max-width: 100%;
        position: absolute;
        top: 72px;
        left: 67px;
    }
    .container .video{ 
	width:98%; 
	height:363px; 
	border-style:solid; border-width:3px; border-color:#000;
	position:absolute;
	top:306px;
	left:5px;
}
    
</style>
}

<div class="container" id="container">
    <div class="whiteBg"></div>
    <div class="video">
        <audio width="100%" id="bgmusic" autoplay preload loop controls></audio>
    </div>
</div>


@section scripts {
    <script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
    <script>
        OP_CONFIG.module = 'mobile';
        OP_CONFIG.page = 'index';
       
       
        
    </script>
}

